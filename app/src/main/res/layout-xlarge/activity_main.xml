<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.gsusrodbe.com.GsusAPP.MainActivity"
    android:orientation="vertical"
     android:background="@drawable/fondo">



    <EditText
        android:id="@+id/nombre"
        android:textColorHint="#0040FF"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:gravity="center_horizontal"

        android:textSize="23dp"
        android:layout_marginTop="121dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/apellido"
        android:textColorHint="#0040FF"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:hint="Apellido"
        android:textSize="23dp"

        android:gravity="center_horizontal"
        android:layout_below="@+id/nombre"
        android:layout_alignLeft="@+id/nombre"
        android:layout_alignStart="@+id/nombre" />

    <Button
        android:gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/registrar"
        android:id="@+id/datos"
        android:layout_below="@+id/apellido"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="81dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Ver Aliados"
        android:id="@+id/consulta"
        android:layout_below="@+id/datos"
       android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UNETE A LOS STARKS"
        android:textColor="#000000"
        android:textStyle="bold"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="135dp"
        android:textSize="80dp"
        android:gravity="center"
        />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:src="@drawable/lobo"
        android:id="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp" />


</RelativeLayout>
